{
	"manifest_version":2,
	"name":"Auto Logout",
	"description":"Automagically logout from facebook, twitter and quora after 10 minutes.",
	"version":"2.0",
	"author": "Adhithyan Vijayakumar",
	"icons":{
			"16":"icons/icon16.png",
			"48":"icons/icon48.png",
			"128":"icons/icon128.png"
		},

	"content_scripts":[
		{
      		"run_at" : "document_end",
      		"matches" : ["https://www.facebook.com/*"],
      		"js" : ["scripts/base.js", "scripts/facebook.js"]
    	},
    	{
      		"run_at" : "document_end",
      		"matches" : ["http://www.quora.com/*"],
      		"js" : ["scripts/base.js", "scripts/quora.js"]
    	},
    	{
      		"run_at" : "document_end",
      		"matches" : ["https://twitter.com/*"],
      		"js" : ["scripts/base.js", "scripts/twitter.js"]
    	}
	],

	"browser_action":{
		"default_title":"You will be logged out in 10 minutes.",
		"default_icon":{
				"38":"icons/icon38.png"
				},
		"default_popup":"new_popup.html"
		},

	"permissions":[
			"activeTab",
			"idle",
			"storage",
			"tabCapture",
			"tabs",
			"https://www.facebook.com/*",
			"https://twitter.com/*",
			"https://www.quora.com/*"
		      ]
}
